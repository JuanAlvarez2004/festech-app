{
  "expo": {
    "name": "Festech",
    "slug": "festech-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "festechapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2A9D8F"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Esta app necesita acceso a la cámara para grabar videos de negocios",
        "NSMicrophoneUsageDescription": "Esta app necesita acceso al micrófono para grabar audio en los videos",
        "NSPhotoLibraryUsageDescription": "Esta app necesita acceso a la galería para seleccionar videos y fotos",
        "NSLocationWhenInUseUsageDescription": "Esta app utiliza tu ubicación para mostrarte negocios cercanos"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#2A9D8F",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#2A9D8F",
          "dark": {
            "backgroundColor": "#264653"
          }
        }
      ],
      [
        "expo-video"
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Esta app necesita acceso al micrófono para grabar audio en los videos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Esta app necesita acceso a la galería para seleccionar videos y fotos.",
          "cameraPermission": "Esta app necesita acceso a la cámara para grabar videos de negocios."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Esta app utiliza tu ubicación para mostrarte negocios cercanos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
